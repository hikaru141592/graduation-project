<% content_for :title, t(".title") %>

<div class="container mt-5" >
  <div class="row gx-4 justify-content-center align-items-md-center">
    <div class="col-12 col-md-6 mb-0 me-md-5">
      <div class="mb-3">
        <%= link_to t("buttons.back"), new_session_path, class: 'btn btn-2', data: { turbo: false } %>
      </div>
      <%= image_tag( "main/password_reset_new.png", alt: "パスワードリセット", class: "img-fluid mb-4" ) %>
    </div>
    <div class="col-12 col-md-3">
      <h2 class="mb-4"><%= t(".title") %></h2>

      <%= form_with url: password_resets_path, local: true, html: { class: 'needs-validation' } do |f| %>
        <div class="mb-3">
          <%= f.label :email, t("activerecord.attributes.user.email"), class: 'form-label' %>
          <%= f.email_field :email, name: :email, class: 'form-control', required: true, placeholder: t("helpers.placeholders.user.email") %>
        </div>

        <div class="d-grid mb-3">
          <%= f.submit t("buttons.reset_request"), class: 'btn btn-2 btn-lg', data: { turbo: false } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
