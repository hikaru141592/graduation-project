<% content_for :title, '新しいパスワードの登録' %>

<div class="container mt-5" style="max-width: 400px;">
  <h1 class="mb-4">新しいパスワードの登録</h1>

  <%= form_with url: update_password_reset_path(@token), method: :patch, local: true, html: { class: 'needs-validation' } do |f| %>
    <%= hidden_field_tag :token, @token %>
    <div class="mb-3">
      <%= f.label :password, 'パスワード', class: 'form-label' %>
      <%= f.password_field :password, name: 'user[password]', class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, 'パスワード (確認用)', class: 'form-label' %>
      <%= f.password_field :password_confirmation, name: 'user[password_confirmation]', class: 'form-control', required: true %>
    </div>

    <div class="d-grid mb-3">
      <%= f.submit '登録', class: 'btn btn-alt btn-lg' %>
    </div>
  <% end %>
</div>