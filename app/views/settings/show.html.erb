<% content_for :title, '設定' %>

<section class="privacy-policy container my-5 mx-0 mx-md-auto" style="max-width: 1200px;">
  <div class="text-start mb-3">
    <%= link_to t("buttons.back"), (root_path), class: 'btn btn-2 mb-0' %>
  </div>

  <h3 class="mb-4">設定</h3>

  <ul>
    <li>
      <% if current_user && current_user.authentications.exists?(provider: "line") %>
        <%= link_to t("links.line_message"), settings_line_notification_path, class: "text-decoration-underline" %>
      <% else %>
        <span class="text-muted">
          LINEメッセージ機能（LINEログインユーザーのみ利用可能）
        </span>
      <% end %>
    </li>
    <li>
      <%= link_to t("links.user_destroy"), delete_account_path, class: "text-decoration-underline" %>
    </li>
  </ul>
</section>
