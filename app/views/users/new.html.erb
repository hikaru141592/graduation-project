<div class="container mt-5" style="max-width: 600px;">
  <h1 class="mb-4">ユーザー登録</h1>

  <%= render 'shared/error_messages', object: @user %>

  <%= form_with model: @user, url: signup_path, local: true, html: { class: 'needs-validation' } do |f| %>
    <div class="mb-3">
      <%= f.label :email, 'メールアドレス', class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control', required: true, placeholder: 'example@example.com' %>
    </div>

    <div class="mb-3">
      <%= f.label :password, 'パスワード（6文字以上）', class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control', minlength: 6, required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, 'パスワード（確認用）', class: 'form-label' %>
      <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :name, 'ユーザー名（6文字以内）', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', maxlength: 6, required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :egg_name, 'たまごちゃん名（6文字以内）', class: 'form-label' %>
      <%= f.text_field :egg_name, class: 'form-control', maxlength: 6, required: true %>
    </div>

    <div class="row mb-3">
      <div class="col">
        <%= f.label :birth_month, '誕生月', class: 'form-label' %>
        <%= f.number_field :birth_month, class: 'form-control', in: 1..12, required: true %>
      </div>
      <div class="col">
        <%= f.label :birth_day, '誕生日（日）', class: 'form-label' %>
        <%= f.number_field :birth_day, class: 'form-control', in: 1..31, required: true %>
      </div>
    </div>

    <div class="d-grid">
      <%= f.submit '登録する', class: 'btn btn-alt btn-lg' %>
    </div>
  <% end %>
</div>
